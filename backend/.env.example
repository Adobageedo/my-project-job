# ===========================================
# SUPABASE (pour auth verification)
# ===========================================
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# ===========================================
# OPENAI (Parsing IA)
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3

# ===========================================
# RECRUITCRM (Synchronisation)
# ===========================================
RECRUITCRM_API_KEY=your-recruitcrm-api-key
RECRUITCRM_API_URL=https://api.recruitcrm.io/v1
RECRUITCRM_WEBHOOK_SECRET=your-webhook-secret

# ===========================================
# RESEND (Emails)
# ===========================================
RESEND_API_KEY=re_your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_FROM_NAME=FinanceStages

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
# Options: fatal, error, warn, info, debug, trace

# ===========================================
# RATE LIMITING
# ===========================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ===========================================
# JWT (si besoin de re-signer)
# ===========================================
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=7d

# ===========================================
# CRON JOBS
# ===========================================
CRON_SYNC_ENABLED=true
CRON_SYNC_SCHEDULE=0 */6 * * *  # Toutes les 6 heures
CRON_EMAIL_DIGEST_SCHEDULE=0 9 * * *  # Tous les jours Ã  9h

# ===========================================
# CIRCUIT BREAKER
# ===========================================
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# ===========================================
# RETRY POLICY
# ===========================================
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY=1000
RETRY_MAX_DELAY=10000
